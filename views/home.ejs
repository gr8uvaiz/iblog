<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%=title%>
  </title>
  <%-include('./partials/bootstrapStyles')-%>
</head>

<body>
  <%-include('./partials/Navbar') -%>

  <div class="container mt-4 m-auto">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
      <% allBlogs.forEach(blog => { %>
        <div class="col mb-4" style="display: flex; justify-content: center;">
          <div class="card" style="width: 16rem;">
            <img class="card-img-top" src="<%= blog.coverImageUrl %>" alt="Card image cap" style="height: 200px; object-fit: cover;">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title.slice(0,20) %>...</h5>
              <p> <strong>Author~ </strong><%=blog.createdBy.name%></p>
              <a href="/blog/<%=blog._id%>" class="btn btn-primary">Read Blog</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  
  

   
      

      


  <%-include('./partials/bootstrapScripts')-%>
</body>

</html>